<%- include('../../includes/header.ejs') %>

<div id="contextWrap">
    <!--sidebar-->
    <%- include('../sidebar/left/sidebar-left.ejs') %>
    <!--sidebar-->

    <!--rightsidebar-->

    <!--rightsidebar-->

    <div class="pusher">
        <!--navbar-->
        <%- include('../navbar/top.ejs') %>
        <!--navbar-->

        <!--maincontent-->
        <div class="mainWrap navslide">
            <div class="ui equal width left aligned padded grid stackable">
                <!-- ui equal width left aligned padded grid stackable -->

                <div class="row">
                    <div class="sixteen wide tablet thirteen wide computer column">
                        <div class="ui segment">
                            <div class="ui breadcrumb">
                                <h3 class="section">KEMASKINI KEW.PA-3</h3>
                                <i class="right angle icon divider"></i>
                                <a class="section" href="/index">Laman Utama</a>
                                <div class="divider"> / </div>
                                <a class="section" href="/index/assets">Senarai Aset</a>
                                <div class="divider"> / </div>
                                <div class="active section">KEW. PA-3</div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="sixteen wide tablet thirteen wide computer column">
                        <div class="ui segments">
                            <div class="ui segment no-padding-bottom">
                                <h5 class="ui left floated header">
                                    KEMASKINI
                                </h5>
                                <div class="clearfix"></div>
                            </div>
                            <div class="ui segment left aligned">

                                <% if(errorMsg) { %>
                                <div class="ui negative message">
                                    <i class="close icon"></i>
                                    <div class="center aligned">
                                        <strong>Error message</strong>
                                    </div>
                                    <p><%= errorMsg %></p>
                                </div>
                                <% } %>
                                <% if(success && success.length > 0) { %>
                                <div class="ui positive message">
                                    <i class="close icon"></i>
                                    <div class="center aligned">
                                        <strong>Success message</strong>
                                    </div>
                                    <p><%= success %></p>
                                </div>
                                <% } %>

                                <form class="ui form" action="/index/assets/<%= asset._id %>?_method=PUT" method="POST">
                                    <table class="ui celled structured table">
                                        <thead class="full-width">
                                            <tr class="center aligned">
                                                <th colspan="4">BAHAGIAN A</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <td class="collapsing" colspan="2">
                                                    <div class="required field">
                                                        <label>No. Siri Pendaftaran</label>
                                                    </div>
                                                </td>
                                                <td colspan="2">
                                                    <input type="text" name="file_ast" value="<%= asset.file_ast %>"
                                                        autocomplete="off" autofocus />
                                                </td>
                                            </tr>
                                            <tr>
                                                <td class="collapsing" colspan="2">
                                                    Kod Nasional
                                                </td>
                                                <td colspan="2">
                                                    <input type="text" name="nas_code" value="<%= asset.nas_code %>" />
                                                </td>
                                            </tr>
                                            <tr>
                                                <td class="collapsing" colspan="2">
                                                    <div class="required field">
                                                        <label>Keterangan Aset</label>
                                                    </div>
                                                </td>
                                                <td colspan="2">
                                                    <input type="text" name="ast_desc" value="<%= asset.ast_desc %>"
                                                        autocomplete="off" />
                                                </td>
                                            </tr>
                                            <tr>
                                                <td class="collapsing" colspan="2">
                                                    Kategori
                                                </td>
                                                <td colspan="2">
                                                    <input type="text" name="cat" value="<%= asset.cat %>"
                                                        autocomplete="off" />
                                                </td>
                                            </tr>
                                            <tr>
                                                <td class="collapsing" colspan="2">
                                                    Sub Kategori
                                                </td>
                                                <td colspan="2">
                                                    <input type="text" name="sub_cat" value="<%= asset.sub_cat %>"
                                                        autocomplete="off" />
                                                </td>
                                            </tr>
                                            <tr>
                                                <td class="collapsing" colspan="2">
                                                    Jenis/ Jenama/ Model
                                                </td>
                                                <td colspan="2">
                                                    <input type="text" name="ast_type" value="<%= asset.ast_type %>"
                                                        autocomplete="off" />
                                                </td>
                                            </tr>
                                            <tr>
                                                <td class="collapsing">
                                                    Buatan
                                                </td>
                                                <td>
                                                    <input type="text" name="ast_make" value="<%= asset.ast_make %>"
                                                        autocomplete="off" />
                                                </td>
                                                <td class="collapsing" colspan="">
                                                    <div class="required field">
                                                        <label>Harga Perolehan Asal (RM)</label>
                                                    </div>
                                                </td>
                                                <td>
                                                    <input type="text" name="ori_acq" value="<%= asset.ori_acq %>"
                                                        autocomplete="off" />
                                                </td>
                                            </tr>
                                            <tr>
                                                <td rowspan="2">Jenis Dan No. Enjin</td>
                                                <td rowspan="2">
                                                    <input type="text" name="eng_no" value="<%= asset.eng_no %>"
                                                        autocomplete="off" autofocus />
                                                </td>
                                                <td>
                                                    <div class="required field">
                                                        <label>Tarikh Perolehan (mm/dd/yy)</label>
                                                    </div>
                                                </td>
                                                <td>
                                                    <input type="date" name="acq_dt"
                                                        value="<%= asset.acq_dt.toISOString().slice(0,10) %>" />
                                                    <!-- <input type="date" value="2013-01-08"> -->
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>
                                                    <div class="required field">
                                                        <label>Tarikh Diterima (mm/dd/yy)</label>
                                                    </div>
                                                </td>
                                                <td>
                                                    <input type="date" id="rcv_dt" name="rcv_dt"
                                                        value="<%= asset.rcv_dt.toISOString().slice(0,10) %>" />
                                                </td>
                                            </tr>
                                            <tr>
                                                <td class="collapsing">
                                                    <div class="required field">
                                                        <label>No. Casis / Siri Pembuat</label>
                                                    </div>
                                                </td>
                                                <td>
                                                    <input type="text" name="casis" value="<%= asset.casis %>"
                                                        autocomplete="off" />
                                                </td>
                                                <td class="collapsing" colspan="">
                                                    <div class="required field">
                                                        <label>No. Pesanan Rasmi Kerajaan / Kontrak</label>
                                                    </div>
                                                </td>
                                                <td>
                                                    <input type="text" name="lOrder" value="<%= asset.lOrder %>"
                                                        autocomplete="off" />
                                                </td>
                                            </tr>
                                            <tr>
                                                <td class="collapsing">
                                                    <div class="required field">
                                                        <label>No. Pendaftaran (Bagi kenderaan)</label>
                                                    </div>
                                                </td>
                                                <td>
                                                    <input type="text" name="ast_reg" value="<%= asset.ast_reg %>"
                                                        autocomplete="off" />
                                                </td>
                                                <td class="collapsing" colspan="">
                                                    Tempoh Jaminan
                                                </td>
                                                <td>
                                                    <input type="text" name="wrnt" value="<%= asset.wrnt %>"
                                                        autocomplete="off" />
                                                </td>
                                            </tr>
                                            <tr>
                                                <td class="collapsing">
                                                    <div class="required field">
                                                        <label>Nama Pembekal</label>
                                                    </div>
                                                </td>
                                                <td>
                                                    <select name="sup" class="ui fluid search dropdown">
                                                        <option value="<%= asset.sup._id %>"><%= asset.sup.supName %>
                                                        </option>
                                                        <% suppliers.forEach(function(supplier) { %>
                                                        <option value="<%= supplier._id %>"><%= supplier.supName %>
                                                        </option>
                                                        <% }); %>
                                                    </select>
                                                </td>
                                                <td class="collapsing" colspan="">
                                                    <div class="required field">
                                                        <label>Alamat Pembekal</label>
                                                    </div>
                                                </td>
                                                <td>
                                                    <select name="sup_addr" class="ui fluid search dropdown">
                                                        <option value="<%= asset.sup._id %>"><%= asset.sup.supAddr %>
                                                        </option>
                                                        <% suppliers.forEach(function(supplier) { %>
                                                        <option value="<%= supplier._id %>"><%= supplier.supAddr %>
                                                        </option>
                                                        <% }); %>
                                                    </select>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td colspan="2">
                                                    <label>Spesifikasi / Catatan :</label>
                                                    <textarea rows="2" name="spec" value="<%= asset.spec %>"
                                                        placeholder="Contoh Sumbangan Kerajaan Tempatan"></textarea>
                                                </td>
                                                <td colspan="2">
                                                    <div class="grouped fields">
                                                        <label for="fruit">Sila pilih kategori aset:</label>
                                                        <div class="field">
                                                            <div class="ui radio checkbox">
                                                                <input type="radio" name="assets_category" checked=""
                                                                    value="movable_aset" class="hidden">
                                                                <label>Aset Alih</label>
                                                            </div>
                                                        </div>
                                                        <div class="field">
                                                            <div class="ui radio checkbox">
                                                                <input type="radio" name="assets_category"
                                                                    value="immovable_aset" class="hidden">
                                                                <label>Aset Tak Alih</label>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </td>
                                            </tr>

                                        </tbody>
                                        <tfoot class="full-width">
                                            <tr>
                                                <th colspan="4">
                                                    <button class="ui right floated small black labeled icon button">
                                                        <i class="edit icon"></i> Kemaskini
                                                    </button>
                                                    <div class="ui small  button">
                                                        Isi semula
                                                    </div>
                                                </th>
                                            </tr>
                                        </tfoot>
                                    </table>
                                </form>








                                <!-- <table class="ui celled structured table">
                                        <thead>
                                            <tr>
                                                <td rowspan="2">Files</td>
                                                <td rowspan="2">Files</td>
                                                <td>Languages</td>
                                                <td>Languages</td>
                                            </tr>
                                            <tr>
                                                <td>Ruby</td>
                                                <td>JavaScript</td>
                                            </tr>
                                        </thead>
                                    </table> -->

                                <div class="ui inverted dimmer">
                                    <div class="ui text loader">Loading</div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
            <!--maincontent-->
        </div>
    </div>
</div>

<%- include('../../includes/footer.ejs') %>

<script>
    $('.tag.example .ui.dropdown')
        .dropdown({ allowAdditions: true });
</script>